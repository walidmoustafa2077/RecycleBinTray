<Window x:Class="RecycleBinTray.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        FontFamily="Segoe UI"
        FontSize="13">

    <Border Background="#FAFAFA"
            BorderBrush="#D0D0D0"
            BorderThickness="1"
            Padding="20"
            CornerRadius="24">
        
        <StackPanel HorizontalAlignment="Center"
                    Width="300">
            <TextBlock Text="RecycleBinTrayApp"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#333"
                       TextAlignment="Center"
                       Margin="0,0,0,5" />

            <TextBlock Text="Version 1.0"
                       FontSize="12"
                       Foreground="#666"
                       TextAlignment="Center"
                       Margin="0,0,0,2" />

            <TextBlock Text="Created by Walid"
                       FontSize="12"
                       Foreground="#666"
                       TextAlignment="Center"
                       Margin="0,0,0,10" />

            <Separator Margin="0,10" />

            <Button Content="OK"
                    Width="140"
                    Height="30"
                    HorizontalAlignment="Center"
                    Click="OnOkClick"
                    Margin="0,10,0,0"
                    FontWeight="Bold"
                    Style="{StaticResource  RoundedButtonStyle}">
            </Button>
        </StackPanel>
    </Border>
</Window>
